
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ฟอร์มกรอกข้อมูล</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <h2>สร้างโค้ดโปรโมชั่น</h2>

    <form method="post">
        <div>
            <label for="code">โค้ดโปรโมชั่น:</label>
            <input type="text" name="code" id="code" required />
        </div>
        <div>
            <label for="discountValue">ส่วนลด (เป็นค่าเต็ม):</label>
            <input type="number" name="discountValue" id="discountValue" />
        </div>
        <div>
            <label for="discountPercent">ส่วนลด (เป็นเปอร์เซ็นต์):</label>
            <input type="number" name="discountPercent" id="discountPercent" />
        </div>
        <div>
            <label for="startDate">วันเริ่มต้น:</label>
            <input type="date" name="startDate" id="startDate" required />
        </div>
        <div>
            <label for="endDate">วันหมดอายุ:</label>
            <input type="date" name="endDate" id="endDate" required />
        </div>
        <button type="submit">สร้างโค้ด</button>
    </form>

    @if (ViewBag.SuccessMessage != null)
    {
        <div>
            <h3>@ViewBag.SuccessMessage</h3>
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div>
            <h3>@ViewBag.ErrorMessage</h3>
        </div>
    }
</body>
</html>