@{
    ViewData["Title"] = "Home Page";

}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ฟอร์มกรอกข้อมูล</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mx-auto p-6 mt-8 max-w-4xl bg-white rounded-lg shadow-lg">
        <h2 class="text-3xl font-extrabold text-center text-gray-800 mb-6">เพิ่มห้องพักใหม่</h2>
        <form id="form-data" class="space-y-6">
            <!-- เลขห้องพัก -->
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-semibold mb-2" for="room_number">เลขห้องพัก</label>
                <input class="shadow-lg appearance-none border rounded-lg w-full py-3 px-4 text-gray-800 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       id="RoomId" type="text" placeholder="เลขห้องพัก">
            </div>

            <!-- ชื่อห้องพัก -->
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-semibold mb-2" for="room_name">ชื่อห้องพัก</label>
                <input class="shadow-lg appearance-none border rounded-lg w-full py-3 px-4 text-gray-800 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       id="room_name" type="text" placeholder="ชื่อห้องพัก">
            </div>

            <!-- เลือกประเภทห้องพัก -->
            <div class="max-w-sm mx-auto">
                <label for="countries" class="block mb-2 text-sm font-medium text-gray-700">เลือกประเภทห้องพัก</label>
                <select id="RoomType"  class="bg-gray-50 border border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-2 focus:ring-blue-500 block w-full py-3 px-4">
                    <option>เดี่ยว</option>
                    <option>สวีท</option>
                    <option>ใหญ่</option>
                    <option>คู่</option>
                </select>
            </div>

            <!-- จำนวนคน -->
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-semibold mb-2" for="person_count">จำนวนคน</label>
                <input class="shadow-lg appearance-none border rounded-lg w-full py-3 px-4 text-gray-800 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       id="person_count" type="number" placeholder="จำนวนคน">
            </div>

            <!-- อัปโหลดไฟล์ -->
            <div class="mb-4">
                <label for="uploadFile1"
                       class="flex items-center justify-center bg-blue-600 hover:bg-blue-700 text-white text-lg px-6 py-3 rounded-lg cursor-pointer">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 mr-2 fill-white inline" viewBox="0 0 32 32">
                        <path d="M23.75 11.044a7.99 7.99 0 0 0-15.5-.009A8 8 0 0 0 9 27h3a1 1 0 0 0 0-2H9a6 6 0 0 1-.035-12 1.038 1.038 0 0 0 1.1-.854 5.991 5.991 0 0 1 11.862 0A1.08 1.08 0 0 0 23 13a6 6 0 0 1 0 12h-3a1 1 0 0 0 0 2h3a8 8 0 0 0 .75-15.956z" />
                        <path d="M20.293 19.707a1 1 0 0 0 1.414-1.414l-5-5a1 1 0 0 0-1.414 0l-5 5a1 1 0 0 0 1.414 1.414L15 16.414V29a1 1 0 0 0 2 0V16.414z" />
                    </svg>
                    อัปโหลด
                    <input type="file" id='uploadFile1' class="hidden" />
                </label>
            </div>

            <!-- ปุ่มบันทึก -->
            <div class="text-center">
                <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                        type="submit">บันทึก</button>
            </div>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        const form = document.getElementById('form-data');
        form.addEventListener('submit', (e) => {
          e.preventDefault();
          Swal.fire({
          title: "บันทึกข้อมูล?",
          showDenyButton: true,
          showCancelButton: true,
          confirmButtonText: "บันทึก",
          denyButtonText: `ไม่บันทึก`
        }).then((result) => {
          /* Read more about isConfirmed, isDenied below */
          if (result.isConfirmed) {
            Swal.fire("บันทึกสำเร็จ!", "", "success");
          } else if (result.isDenied) {
            Swal.fire("การเปลี่ยนแปลงจะไม่ได้รับการบันทึก", "", "info");
          }
        });
        });
    </script>
</body>
</html>


